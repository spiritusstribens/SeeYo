<div style='float:right; margin:5px'><%= link_to 'Logout', destroy_user_session_path, :method => 'delete' %></div>
<div style='float:right; margin:5px'><%= link_to 'Comments', admin_comments_path %></div>
<div style='float:right; margin:5px'><%= link_to 'Yochats', admin_yochats_path %></div>
<div style='float:right; margin:5px'><%= link_to 'Users', admin_users_path %></div>

<h1>Welcome <%= current_user.username %>!</h1>
<h2>List of Yochats</h2>

<table width='700px' style='box-shadow:5px 5px 20px #555'>
	<thead style='background-color:#88F; text-align: center'>
		<tr>
			<th>ID</th>
			<th>Yoker</th>
			<th>conten</th>
			<th>time</th>
			<th>Mgmt.</th>
		</tr>
	</thead>
	<tbody style='background-color:#CCF'>
		<% @yochats.each do |yochat| %>
		<tr>
			<td><%= yochat.id %></td>
			<td><%= yochat.user.username %></td>
			<td><%= simple_format(yochat.content) %></td>
			<td><%= yochat.created_at %></td>
			<td style='text-align:center'><%= link_to 'show', admin_yochat_path(yochat) %>&nbsp;&nbsp;<%= link_to 'edit', edit_admin_yochat_path(yochat) %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<br/><br/>
<hr/>
<%= paginate @yochats %>
